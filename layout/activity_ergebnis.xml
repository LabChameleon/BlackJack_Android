<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.adt.blackjack.ErgebnisActivity"
    android:background="@drawable/hintergrundbild2">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/ergebnisUebersicht"
        android:id="@+id/tvErgebnisUebersicht"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="34dp"
        android:layout_marginStart="34dp"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/anzahlSpiele"
        android:id="@+id/tvAnzahlSpiele"
        android:layout_marginTop="70dp"
        android:layout_below="@+id/tvErgebnisUebersicht"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/croupierText"
        android:id="@+id/tvCroupier"
        android:layout_marginTop="37dp"
        android:layout_below="@+id/tvAnzahlSpiele"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/spielerText"
        android:id="@+id/tvSpieler"
        android:layout_marginTop="34dp"
        android:phoneNumber="false"
        android:layout_below="@+id/tvCroupier"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/anzahlSpieleZaehler"
        android:id="@+id/tvAnzahlSpieleZaehler"
        android:layout_above="@+id/tvCroupier"
        android:layout_toRightOf="@+id/tvErgebnisUebersicht"
        android:layout_toEndOf="@+id/tvErgebnisUebersicht" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/croupierGewinnpunkte"
        android:id="@+id/tvCroupierGewinnpunkte"
        android:layout_alignTop="@+id/tvCroupier"
        android:layout_alignLeft="@+id/tvAnzahlSpieleZaehler"
        android:layout_alignStart="@+id/tvAnzahlSpieleZaehler" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/spielerGewinnpunkte"
        android:id="@+id/tvSpielerGewinnpunkte"
        android:layout_alignTop="@+id/tvSpieler"
        android:layout_alignLeft="@+id/tvCroupierGewinnpunkte"
        android:layout_alignStart="@+id/tvCroupierGewinnpunkte" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/neueSpielrunde"
        android:id="@+id/tvNeueSpielrunde"
        android:onClick="neueSpielrunde"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:alpha="1" />
</RelativeLayout>
